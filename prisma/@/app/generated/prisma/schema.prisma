generator client {
  provider = "prisma-client-js"
  output   = "@/app/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model Article {
  id          String   @id @default(uuid())
  title       String
  description String?
  content     String?
  url         String   @unique
  source      String
  category    Category
  publishedAt DateTime
  imageUrl    String?
  createdAt   DateTime @default(now())

  @@index([category, publishedAt])
}

model Newsletter {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  createdAt DateTime @default(now())
}

enum Category {
  politics
  business
  technology
  sports
  world
}
